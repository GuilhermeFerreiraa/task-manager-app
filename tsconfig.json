{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components": ["./src/components/index.ts"],
      "@/components/*": ["./src/components/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/store/*": ["./src/store/*"],
      "@/libs/*": ["./src/libs/*"],
      "@/services/*": ["./src/services/*"],
      "@/storage/*": ["./src/storage/*"],
      "@/providers/*": ["./src/providers/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/assets/icons/**/*.svg",
    "declarations.d.ts",
    "app/(tabs)/new-task.tsx_"
  ]
}
